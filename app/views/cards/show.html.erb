<div id="card-vue"></div>
<script>initVueApp.card()</script>
<table>
  <tr><th>B</th><th>I</th><th>N</th><th>G</th><th>O</th></tr>
  <% Card::Size.times do |row| %>
    <tr>
      <% Card::Size.times do |col| %>
        <td align="middle">
          <font color="<%= @card.state_at(col, row) ? "black" : "red" %>">
          <%= @card.cell_at(col, row) || "-" %>
          </font>
        </td>
      <% end %>
    </tr>
  <% end %>
</table>
<p><%= @card.reaches %>リーチ</p>
<p><%= @card.bingo ? "#{@card.bingo}回目の抽選でビンゴ" : "ビンゴではない" %></p>
