<h1>ビンゴゲーム</h1>
<% flash.each do |type, msg| %>
  <div>
    <%= msg %>
  </div>
<% end %>
<p>開始時刻: <%= @game.created_at %></p>
<p>これまで引かれた数字: <%= @game.draws.join(" ") %></p>
<p><%= form_tag({action: "draw"}, method: "put") do %>
  <%= submit_tag("数字を引く") %>
<% end %></p>
<h2>ゲームに参加する</h2>
<% newcard_url = game_url + "/newcard" %>
<svg width="200" height="200">
  <%= RQRCode::QRCode.new(newcard_url).as_svg(viewbox: true).html_safe %>
</svg>
<p><tt><%= link_to(newcard_url, newcard_url) %></tt></p>
<h2>参加中のビンゴカード</h2>
<ul>
  <% @cards.each do |card| %>
    <li><%= card.id %>: <%= card.reaches %>リーチ、ビンゴ<%= card.bingo? ? "！" : "ではない" %></li>
  <% end %>
</ul>
